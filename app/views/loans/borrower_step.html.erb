<h2>Select Borrower</h2>

<%= form_tag loans_borrower_step_path,
  data: { controller: "form", action: "change->form#submit" } do %>

  <% @users.each do |user| %>
    <div>
      <%= radio_button_tag(:user, user.id) %>
      <%= label_tag(dom_id(user), user.full_name) %>
    </div>
  <% end %>
<% end %>
